{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Override cho Next.js */
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    
    /* Plugins */
    "plugins": [
      {
        "name": "next"
      }
    ],
    
    /* Alias riêng cho Web (nếu cần) */
    "paths": {
      "@/*": ["./*"],
      "@gr2/*": ["../../core/*/src"] // Trỏ ngược ra ngoài root để lấy code backend
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}