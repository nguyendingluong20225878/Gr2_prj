{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".", 
    
    // Đảm bảo các cấu hình module vẫn giữ đúng chuẩn ESM
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*", 
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}